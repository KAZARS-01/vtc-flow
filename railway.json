{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "phases": {
                "install": {
                    "cmds": [
                        "npm install",
                        "cd server && npm install"
                    ]
                },
                "build": {
                    "cmds": [
                        "echo 'No build step required for Node.js API'"
                    ]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "cd server && node index.js",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}